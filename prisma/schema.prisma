generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Teacher {
  id Int @id @default(autoincrement())
  username String @db.VarChar(255) 
  password String @db.VarChar(255) 
  firstName String @db.VarChar(255) @map("first_name")
  lastName String @db.VarChar(255) @map("last_name")
  suffix String @db.VarChar(255)
  gradeTaught String @db.VarChar(255) @map("grade_taught")
  students Student[]
}

model Student {
  id Int @id @default(autoincrement())
  teacherId Int @unique // relationship scalar field
  teacher Teacher @relation(fields: [teacherId], references: [id])
  gradeLevel String @db.VarChar(255) @map("grade_level")
}
